	"license": "ISC",
	"peerDependencies": {
		"@electron-forge/plugin-base": ">=7.0.0"
	},
	"devDependencies": {
		"fs-extra": "^11.2.0",
		"@electron-forge/plugin-base": "^7.0.0",
		"@electron-forge/shared-types": "^7.0.0",
		"@types/fs-extra": "^11.0.4",
		"typescript": "^5.3.3"
	},
	"homepage": "https://github.com/joris/electron-forge-azure-sign-tool-plugin#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/joris/electron-forge-azure-sign-tool-plugin.git"
	},
	"keywords": [
		"electron",
		"electron-forge",
		"plugin",
		"codesign",
		"electron-forge-plugin",
		"electron-build",
